<!DOCTYPE html>
<html>
  <head>
    <title>Bill - {{client.invoice_no}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        background: #fff;
        color: #222;
        line-height: 1.3;
        margin: 0;
        padding: 0;
      }
      .bill-container {
        position: relative;
        width: 700px;
        margin: 10px auto;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 20px;
        overflow: hidden;
      }
      .section-title {
        font-size: 1rem;
        font-weight: bold;
        margin-top: 15px;
        margin-bottom: 5px;
        color: #333;
      }
      .info-table,
      .charges-table,
      .account-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 10px;
      }
      .info-table td,
      .account-table td {
        padding: 4px 6px;
        vertical-align: top;
      }
      .charges-table th,
      .charges-table td,
      .account-table th,
      .account-table td {
        border: 1px solid #ccc;
        padding: 6px;
        vertical-align: top;
      }
      .charges-table th {
        background: #f8f8f8;
        text-align: left;
      }
      .charges-table td {
        text-align: right;
      }
      .charges-table col.col-serial {
        width: 50px;
      }
      .charges-table col.col-hsn {
        width: 100px;
      }
      .charges-table col.col-amount {
        width: 110px;
      }
      .charges-table td.description,
      .charges-table th.description {
        text-align: left;
        white-space: normal;
        overflow-wrap: anywhere;
        word-break: normal;
      }
      .charges-table td.amount {
        white-space: nowrap;
      }
      .total-row {
        font-weight: bold;
        background: #f1f1f1;
      }
      .signature-section {
        display: flex;
        justify-content: space-between;
        margin-top: 40px;
        padding-top: 10px;
      }
      .footer {
        text-align: center;
        padding: 10px;
        border-top: 1px solid #0d47a1;
        margin-top: 20px;
        font-size: 11px;
      }
    </style>
  </head>

  <body>
    <div class="bill-container">
      <!-- Header -->
      <table width="100%" style="border-bottom: 2px solid #0d47a1; margin-bottom: 20px; padding-bottom: 15px;">
        <tr>
          <td style="text-align: left; vertical-align: top;">
            <div style="font-size: 18px; font-weight: bold; color: #0d47a1; margin-bottom: 5px;">
              Startup web support
            </div>
            <div style="font-size: 12px; color: #555;">
              Address: 3rd Floor, Parvati Tower, <br />
              Phulwari Rd, Jagdeo Path, Patna, Bihar 800014<br />
              Phone: +917479499718<br />
              Email: info@startupwebsupport.com<br />
              GST: 10GIEPK4018N1ZC<br />
              Website:
              <a href="https://startupwebsupport.com/" style="color: #0d47a1; text-decoration: none;">
                https://startupwebsupport.com/
              </a>
            </div>
          </td>
          <td style="width: 90px; vertical-align: top;">
            <img src="https://startupwebsupport.com/assets/img/logo.png" alt="Logo" />
          </td>
        </tr>
      </table>

      <!-- Client Info -->
      <div class="section-title">Bill To</div>
      <table class="info-table">
        <tr>
          <td><strong>Invoice No:</strong></td>
          <td>{{client.invoice_no}}</td>
          <td><strong>Date:</strong></td>
          <td>{{client.created_at}}</td>
        </tr>
        <tr>
          <td><strong>Client Name:</strong></td>
          <td>{{client.name}}</td>
          <td><strong>Email:</strong></td>
          <td>{{client.email}}</td>
        </tr>
        <tr>
          <td><strong>Company Name:</strong></td>
          <td>{{client.company_name}}</td>
          <td><strong>Number:</strong></td>
          <td>{{client.number}}</td>
        </tr>
        <tr>
          <td><strong>Address:</strong></td>
          <td>{{client.address}}</td>
          <td><strong>GST:</strong></td>
          <td>{{client.gst_client}}</td>
        </tr>
      </table>

      <!-- Charges Table -->
      <div class="section-title">Charges</div>
      <table class="charges-table">
        <colgroup>
          <col class="col-serial" />
          <col class="col-desc" />
          <col class="col-hsn" />
          <col class="col-amount" />
        </colgroup>
        <thead style="background-color: #0d47a1; color: #fff;">
          <tr>
            <th>Serial No.</th>
            <th class="description">Description</th>
            <th style="text-align: left;">HSN</th>
            <th style="text-align: right;">Amount</th>
          </tr>
        </thead>
        <tbody>
          {{#each client.description}}
          <tr>
            <td>{{inc @index}}</td>
            <td class="description">{{this}}</td>
            <td style="text-align: left;">{{lookup ../client.hsn @index}}</td>
            <td class="amount">{{lookup ../client.amount @index}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <!-- Received Amount -->
      {{#if client.receive_amount}}
      <div class="section-title">Received Amount</div>
      <table class="charges-table">
        <thead style="background-color: #0d47a1; color: #fff;">
          <tr>
            <th>Sl. No.</th>
            <th>Date</th>
            <th>Mode of Payment</th>
            <th>Amount Received</th>
          </tr>
        </thead>
        <tbody>
          {{#each client.receive_amount}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{lookup ../client.payment_date @index}}</td>
            <td>{{lookup ../client.mode_of_payment @index}}</td>
            <td style="text-align: right;">{{this}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{/if}}

      <!-- Summary -->
      <table class="charges-table">
        <tr>
          <td style="text-align: left; font-weight: bold;">
            Amount in Words: {{numberToWords client.grand_total}} Only
          </td>
          <td style="text-align: right;">
            <table style="width: 100%; border-collapse: collapse;">
              <tr>
                <td>Amount:</td>
                <td style="text-align: right;">{{client.total_amount}}</td>
              </tr>
              <tr>
                <td>GST ({{client.gst}}%):</td>
                <td style="text-align: right;">{{client.gst_amount}}</td>
              </tr>
              <tr>
                <td>Discount:</td>
                <td style="text-align: right;">{{client.discount}}</td>
              </tr>
              <tr style="font-weight: bold; border-top: 1px solid #ccc;">
                <td>Grand Total:</td>
                <td style="text-align: right;">{{client.grand_total}}</td>
              </tr>
              <tr>
                <td>Total Received:</td>
                <td style="text-align: right;">{{client.total_received}}</td>
              </tr>
              <tr style="font-weight: bold; background: #f8f8f8;">
                <td>Due Amount:</td>
                <td style="text-align: right;">{{client.due_amount}}</td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      <!-- Account Details -->
      <div class="section-title">Bank Account Details</div>
      <table class="account-table">
        <tr>
          <th>Account Name</th>
          <td>{{client.account_name}}</td>
        </tr>
        <tr>
          <th>Account Number</th>
          <td>{{client.accoun_number}}</td>
        </tr>
        <tr>
          <th>IFSC Code</th>
          <td>{{client.ifsc_code}}</td>
        </tr>
      </table>

      <div class="signature-section">
        <div>This is a computer-generated invoice and does not require a signature.</div>
      </div>

      <div class="footer">
        <div style="font-weight: bold; color: #0d47a1;">
          Contact us: +917479499718
        </div>
        <div>
          Website:
          <a href="https://startupwebsupport.com/" style="color: #0d47a1; text-decoration: none;">
            https://startupwebsupport.com/
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
